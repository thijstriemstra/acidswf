package com.collab.acidswf
{	import flash.events.Event;		import org.hamcrest.assertThat;	import org.hamcrest.collection.arrayWithSize;	import org.hamcrest.object.instanceOf;
		/**	 * Tests for the XML type.	 * 	 * @language 3.0	 * @playerversion Flash 9.0	 * @since 1.0 	 */	public class XMLTest extends BaseTest
	{		private static var tmpXML:XML;				[Before]		public function setUp():void		{			setup();						XML.ignoreComments = false;			XML.ignoreProcessingInstructions = false;			XML.prettyIndent = 0;			XML.prettyPrinting = false;						var customSettings:Object = XML.settings();						tmpXML =				<employees>					<employee ssn="123-123-1234">						<name first="John" last="Doe"/>						<address>							<street>11 Main St.</street>							<city>San Francisco</city>							<state>CA</state>							<zip>98765</zip>						</address>					</employee>					<employee ssn="789-789-7890">						<name first="Mary" last="Roe"/>						<address>							<street>99 Broad St.</street>							<city>Newton</city>							<state>MA</state>							<zip>01234</zip>						</address>					</employee>				</employees>;		}				[After]		public function tearDown():void		{			teardown();		}				[Test(async)]		public function empty():void		{			var empty:XML = new XML();						setupCall( function(event:Event, passThroughData:*):void			{				assertThat( loader.result, instanceOf( XML ));			},			empty );		}				[Test(async)]		public function create():void		{			setupCall( function(event:Event, passThroughData:*):void			{				assertThat( loader.result, instanceOf( XML ));			},			tmpXML );		}				[Test(async)]		public function list():void		{			var tmp1: Array = new Array();			tmp1.push(tmpXML);			tmp1.push(tmpXML);						setupCall( function(event:Event, passThroughData:*):void			{				assertThat( loader.result, arrayWithSize( 2 ));				assertThat( loader.result[0], instanceOf( XML ));			},			tmp1 );		}		
	}
}
